---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/admin', label: 'Dashboard' },
  { href: '/admin/articles', label: 'Articles' },
  { href: '/admin/resources', label: 'Resources' },
  { href: '/admin/categories', label: 'Categories' },
  { href: '/admin/contacts', label: 'Contacts' },
  { href: '/admin/subscribers', label: 'Subscribers' },
  { href: '/admin/settings', label: 'Site Settings' },
];

function isActive(href: string): boolean {
  if (href === '/admin') return currentPath === '/admin' || currentPath === '/admin/';
  return currentPath.startsWith(href);
}
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="robots" content="noindex, nofollow" />
  <title>{title} | ST Admin</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
</head>
<body class="min-h-screen bg-neutral-50 font-sans text-neutral-600 antialiased">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-60 bg-neutral-900 text-white shrink-0 flex flex-col">
      <div class="p-5 border-b border-white/10">
        <a href="/admin" class="text-lg font-bold tracking-tight">ST Admin</a>
      </div>
      <nav class="p-3 space-y-0.5 flex-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'block px-4 py-2.5 text-sm font-medium rounded-lg transition-colors',
              isActive(item.href)
                ? 'bg-brand-600 text-white'
                : 'text-neutral-400 hover:bg-white/5 hover:text-white',
            ]}
          >
            {item.label}
          </a>
        ))}
      </nav>
      <div class="p-3 border-t border-white/10">
        <a href="/" class="block px-4 py-2 text-sm text-neutral-400 hover:text-white transition-colors">
          &larr; View Site
        </a>
        <a href="/admin/logout" class="block px-4 py-2 text-sm text-neutral-400 hover:text-white transition-colors">
          Sign Out
        </a>
      </div>
    </aside>

    <!-- Main -->
    <div class="flex-1 flex flex-col min-h-screen">
      <header class="bg-white border-b border-neutral-200 px-8 py-5 shrink-0 flex items-center justify-between">
        <h1 class="text-xl font-bold text-neutral-900">{title}</h1>
        <button id="rebuild-btn" type="button"
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-semibold rounded-lg bg-brand-50 text-brand-700 border border-brand-200 hover:bg-brand-100 transition-colors">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182" />
          </svg>
          <span>Rebuild Site</span>
        </button>
      </header>
      <main class="flex-1 p-8">
        <slot />
      </main>
    </div>
  </div>
  <script is:inline>
    document.getElementById('rebuild-btn')?.addEventListener('click', async function() {
      const btn = this;
      const span = btn.querySelector('span');
      const origText = span.textContent;
      span.textContent = 'Rebuilding...';
      btn.disabled = true;
      btn.style.opacity = '0.6';
      try {
        const res = await fetch('/api/rebuild', { method: 'POST' });
        const data = await res.json();
        if (data.ok) {
          span.textContent = 'Rebuild triggered!';
          setTimeout(() => { span.textContent = origText; btn.disabled = false; btn.style.opacity = '1'; }, 3000);
        } else {
          span.textContent = 'Error: ' + (data.error || 'unknown');
          setTimeout(() => { span.textContent = origText; btn.disabled = false; btn.style.opacity = '1'; }, 3000);
        }
      } catch {
        span.textContent = 'Failed';
        setTimeout(() => { span.textContent = origText; btn.disabled = false; btn.style.opacity = '1'; }, 3000);
      }
    });
  </script>
</body>
</html>
