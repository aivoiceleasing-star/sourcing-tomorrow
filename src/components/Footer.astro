---
import { categories } from '../data/mock';

const currentYear = new Date().getFullYear();

const resourceLinks = [
  { label: 'Articles', href: '/articles/' },
  { label: 'Tools', href: '/tools/' },
  { label: 'Resources', href: '/resources/' },
  { label: 'Newsletter', href: '/newsletter/' },
];
---

<footer class="bg-white border-t border-neutral-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
      <!-- Col 1: Brand -->
      <div>
        <a href="/" class="inline-block mb-4">
          <img src="/images/logo.webp" alt="SourcingTomorrow" class="w-48 sm:w-72" />
        </a>
        <p class="text-neutral-500 text-sm leading-relaxed">
          Insights, strategies, and analysis for procurement professionals shaping the future of sourcing and supply chain management.
        </p>
      </div>

      <!-- Col 2: Categories -->
      <div>
        <h4 class="text-neutral-900 font-semibold text-sm uppercase tracking-wider mb-4">Categories</h4>
        <ul class="space-y-4">
          {categories.map((cat) => (
            <li>
              <a
                href={`/categories/${cat.slug}/`}
                class="text-neutral-500 hover:text-neutral-900 text-sm transition-colors duration-200"
              >
                {cat.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Col 3: Resources -->
      <div>
        <h4 class="text-neutral-900 font-semibold text-sm uppercase tracking-wider mb-4">Resources</h4>
        <ul class="space-y-3">
          {resourceLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-neutral-500 hover:text-neutral-900 text-sm transition-colors duration-200"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Col 4: Connect -->
      <div>
        <h4 class="text-neutral-900 font-semibold text-sm uppercase tracking-wider mb-4">Connect</h4>
        <p class="text-neutral-500 text-sm mb-4">Subscribe for weekly procurement insights.</p>
        <form id="footer-nl-form" class="flex flex-col gap-3">
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            required
            class="w-full px-4 py-2.5 rounded-lg bg-neutral-50 border border-neutral-300 text-neutral-900 placeholder:text-neutral-400 text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
          />
          <button type="submit" class="btn-primary px-4 py-2.5 text-sm">
            Subscribe
          </button>
        </form>
        <div id="footer-nl-status" class="hidden mt-3"></div>
        <div class="flex items-center gap-4 mt-6">
          <a href="#" class="text-neutral-400 hover:text-neutral-900 transition-colors duration-200" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
            </svg>
          </a>
          <a href="#" class="text-neutral-400 hover:text-neutral-900 transition-colors duration-200" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-16 pt-8 border-t border-neutral-200">
      <p class="text-neutral-400 text-sm text-center">
        &copy; {currentYear} SourcingTomorrow. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<script is:inline>
  document.getElementById('footer-nl-form')?.addEventListener('submit', async function(e) {
    e.preventDefault();
    var form = e.target;
    var status = document.getElementById('footer-nl-status');
    var btn = form.querySelector('button[type="submit"]');
    var origText = btn.textContent;
    btn.disabled = true;
    btn.textContent = 'Subscribing...';
    try {
      var res = await fetch('/api/newsletter', { method: 'POST', body: new FormData(form) });
      var data = await res.json();
      if (data.success) {
        status.className = 'mt-3 p-3 rounded-lg bg-green-50 text-green-700 text-sm font-medium';
        status.textContent = "You're subscribed! Welcome to SourcingTomorrow.";
        form.reset();
      } else {
        throw new Error(data.error || 'Unknown error');
      }
    } catch (err) {
      status.className = 'mt-3 p-3 rounded-lg bg-red-50 text-red-700 text-sm font-medium';
      status.textContent = 'Something went wrong. Please try again.';
    }
    status.classList.remove('hidden');
    btn.disabled = false;
    btn.textContent = origText;
  });
</script>
