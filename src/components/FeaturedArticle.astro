---
import CategoryBadge from './CategoryBadge.astro';

interface Props {
  title: string;
  slug: string;
  excerpt: string;
  category: string;
  categorySlug: string;
  publishDate: string;
  readTime: number;
  featuredImage?: string;
}

const { title, slug, excerpt, category, categorySlug, publishDate, readTime, featuredImage } = Astro.props;

const formattedDate = new Date(publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a href={`/articles/${slug}/`} class="card group block overflow-hidden">
  <div class="grid grid-cols-1 lg:grid-cols-2">
    <!-- Image Area -->
    <div class="aspect-[16/9] lg:aspect-auto lg:min-h-[360px] bg-brand-50 flex items-center justify-center overflow-hidden">
      {featuredImage ? (
        <img
          src={featuredImage}
          alt={`${title} â€” ${category} | Sourcing Tomorrow`}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          loading="eager"
          decoding="async"
        />
      ) : (
        <svg class="w-20 h-20 text-brand-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
      )}
    </div>

    <!-- Content -->
    <div class="p-8 lg:p-12 flex flex-col justify-center">
      <div class="mb-4">
        <CategoryBadge name={category} slug={categorySlug} size="md" />
      </div>
      <div class="flex items-center gap-2 text-neutral-400 text-sm mb-3">
        <time datetime={publishDate}>{formattedDate}</time>
        <span>&middot;</span>
        <span>{readTime} min read</span>
      </div>
      <h2 class="text-2xl lg:text-3xl font-extrabold text-neutral-900 group-hover:text-brand-700 transition-colors duration-200 mb-4">
        {title}
      </h2>
      <p class="text-neutral-500 leading-relaxed mb-6">
        {excerpt}
      </p>
      <span class="text-brand-700 font-semibold text-sm inline-flex items-center gap-1 group-hover:gap-2 transition-all duration-200">
        Read article
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </span>
    </div>
  </div>
</a>
