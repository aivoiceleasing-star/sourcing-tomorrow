---
import NewsletterSignup from './NewsletterSignup.astro';

interface Props {
  title: string;
  subtitle?: string;
  showNewsletter?: boolean;
}

const { title, subtitle, showNewsletter = false } = Astro.props;
---

<section class="bg-gradient-to-b from-brand-50 to-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32 text-center">
    <h1 class="text-4xl lg:text-6xl font-extrabold text-neutral-900 mb-6">
      {title}
    </h1>
    {subtitle && (
      <p class="text-xl text-neutral-500 max-w-2xl mx-auto mb-10">
        {subtitle}
      </p>
    )}
    {showNewsletter && (
      <div class="max-w-lg mx-auto">
        <NewsletterSignup variant="inline" />
      </div>
    )}
  </div>
</section>
