---
interface Props {
  title: string;
  slug: string;
  description: string;
  category: string;
  coverImage?: string;
}

const { title, slug, description, category, coverImage } = Astro.props;
---

<div class="card p-6 flex flex-col h-full">
  <span class="text-xs uppercase tracking-wider text-brand-600 font-semibold mb-3">
    {category}
  </span>
  <h3 class="text-lg font-bold text-neutral-900 mb-2">
    {title}
  </h3>
  <p class="text-sm text-neutral-500 line-clamp-3 mb-6 flex-1">
    {description}
  </p>
  <a
    href={`/resources/${slug}/`}
    class="text-brand-700 font-semibold text-sm inline-flex items-center gap-1 hover:gap-2 transition-all duration-200"
  >
    Download
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
  </a>
</div>
