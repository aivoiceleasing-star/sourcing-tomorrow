---
interface Props {
  name: string;
  slug: string;
  size?: 'sm' | 'md';
}

const { name, slug, size = 'sm' } = Astro.props;

const sizeClasses = {
  sm: 'px-2.5 py-1 text-xs',
  md: 'px-3 py-1.5 text-sm',
};
---

<a
  href={`/categories/${slug}/`}
  class:list={[
    'inline-block bg-brand-50 text-brand-700 font-semibold rounded-full hover:bg-brand-100 transition-colors duration-200',
    sizeClasses[size],
  ]}
>
  {name}
</a>
