---
import CategoryBadge from './CategoryBadge.astro';

interface Props {
  title: string;
  slug: string;
  excerpt: string;
  category: string;
  categorySlug: string;
  featuredImage?: string;
  publishDate: string;
  readTime: number;
}

const { title, slug, excerpt, category, categorySlug, featuredImage, publishDate, readTime } = Astro.props;

// Category-specific gradients for placeholder images
const categoryGradients: Record<string, string> = {
  'strategic-sourcing': 'from-teal-600 to-teal-800',
  'digital-transformation': 'from-blue-600 to-indigo-800',
  'risk-management': 'from-orange-500 to-red-700',
  'sustainability': 'from-emerald-500 to-green-800',
  'supplier-relationships': 'from-violet-500 to-purple-800',
  'industry-news': 'from-amber-500 to-orange-700',
};
const gradient = categoryGradients[categorySlug] || 'from-teal-600 to-teal-800';

// Category icons (SVG paths)
const categoryIcons: Record<string, string> = {
  'strategic-sourcing': 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  'digital-transformation': 'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  'risk-management': 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z',
  'sustainability': 'M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  'supplier-relationships': 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
  'industry-news': 'M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z',
};
const iconPath = categoryIcons[categorySlug] || categoryIcons['industry-news'];
---

<a href={`/articles/${slug}/`} class="card group flex flex-col overflow-hidden h-full">
  <!-- Image Area -->
  <div class="aspect-[16/9] overflow-hidden flex-shrink-0 relative">
    {featuredImage ? (
      <img
        src={featuredImage}
        alt={`${title} â€” ${category} | Sourcing Tomorrow`}
        title={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <div class:list={['w-full h-full bg-gradient-to-br flex items-center justify-center', gradient]}>
        <svg class="w-16 h-16 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={iconPath} />
        </svg>
      </div>
    )}
  </div>

  <!-- Content -->
  <div class="p-5 flex flex-col flex-1">
    <h3 class="text-lg font-bold text-neutral-900 group-hover:text-brand-700 transition-colors duration-200 mb-2 line-clamp-2">
      {title}
    </h3>
    <p class="text-sm text-neutral-500 line-clamp-2 mb-4 flex-1">
      {excerpt}
    </p>
    <div class="mt-auto flex items-center justify-between">
      <CategoryBadge name={category} slug={categorySlug} size="sm" />
      <span class="text-xs text-neutral-400">{readTime} min read</span>
    </div>
  </div>
</a>
