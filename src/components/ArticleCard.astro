---
import CategoryBadge from './CategoryBadge.astro';

interface Props {
  title: string;
  slug: string;
  excerpt: string;
  category: string;
  categorySlug: string;
  featuredImage?: string;
  publishDate: string;
  readTime: number;
}

const { title, slug, excerpt, category, categorySlug, featuredImage, publishDate, readTime } = Astro.props;

const formattedDate = new Date(publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a href={`/articles/${slug}/`} class="card group flex flex-col overflow-hidden h-full">
  <!-- Image Area -->
  <div class="aspect-[16/9] overflow-hidden flex-shrink-0">
    {featuredImage ? (
      <img
        src={featuredImage}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-full bg-neutral-100 flex items-center justify-center">
        <svg class="w-12 h-12 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
      </div>
    )}
  </div>

  <!-- Content -->
  <div class="p-5 flex flex-col flex-1">
    <div class="mb-3">
      <CategoryBadge name={category} slug={categorySlug} size="sm" />
    </div>
    <div class="flex items-center gap-2 text-neutral-400 text-xs mb-2">
      <time datetime={publishDate}>{formattedDate}</time>
      <span>&middot;</span>
      <span>{readTime} min read</span>
    </div>
    <h3 class="text-lg font-bold text-neutral-900 group-hover:text-brand-700 transition-colors duration-200 mb-2">
      {title}
    </h3>
    <p class="text-sm text-neutral-500 line-clamp-2 mt-auto">
      {excerpt}
    </p>
  </div>
</a>
