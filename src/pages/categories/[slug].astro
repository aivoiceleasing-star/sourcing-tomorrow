---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { getArticlesByCategory } from '../../lib/airtable';
import { categories } from '../../data/mock';

export async function getStaticPaths() {
  const paths = await Promise.all(
    categories.map(async (cat) => {
      const articles = await getArticlesByCategory(cat.slug);
      return {
        params: { slug: cat.slug },
        props: { category: cat, articles },
      };
    })
  );
  return paths;
}

const { category, articles } = Astro.props;
---

<BaseLayout
  title={category.name}
  description={category.description}
>
  <Hero
    title={category.name}
    subtitle={category.description}
  />

  <section class="mx-auto max-w-6xl px-4 py-16 sm:px-6 lg:px-8">
    {articles.length > 0 ? (
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {articles.map((article) => (
          <ArticleCard
            title={article.title}
            slug={article.slug}
            excerpt={article.excerpt}
            category={article.category}
            categorySlug={article.categorySlug}
            featuredImage={article.featuredImage}
            publishDate={article.publishDate}
            readTime={article.readTime}
          />
        ))}
      </div>
    ) : (
      <div class="py-20 text-center">
        <svg class="mx-auto mb-4 h-12 w-12 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <h3 class="mb-2 text-lg font-semibold text-neutral-900">No articles in this category yet</h3>
        <p class="text-neutral-500">
          Check back soon or <a href="/articles/" class="text-brand-700 hover:text-brand-800 font-medium">browse all articles</a>.
        </p>
      </div>
    )}
  </section>
</BaseLayout>
